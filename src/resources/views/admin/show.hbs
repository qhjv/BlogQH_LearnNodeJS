<div class="adminViewPost mt-4">
    <h2>Bài post của tôi</h2>
    <div class="container mt-4">
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">STT</th>
                        <th scope="col">Title</th>
                        <th scope="col">Ngày đăng</th>
                        <th scope="col">Người đăng</th>
                        <th scope="col">Công cụ</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each post}}
                    <tr>
                        <th scope="row">{{sum @index 1}}</th>
                        <td>{{this.title}}</td>
                        <td>{{this.createdAt}}</td>
                        <td>{{this.author}}</td>
                        <td>
                            <a href="/post/admin/{{this._id}}/edit" class="btn btn-link">Sửa</a>
                            <a href="" class="btn btn-link">Xóa</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>