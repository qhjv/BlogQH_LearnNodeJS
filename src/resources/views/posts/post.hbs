<div class="post__viewPage mt-4">
    <div class="container">
        <div class="row">
            <div class="post__view col-md-8 col-lg-8">
                <div class="post__view--title">
                    <h1>
                        {{post.title}}
                    </h1>
                </div>
                <div class="post__view--thumb">
                    <img src="{{post.thumb}}" alt="">
                </div>
                <div class="post__view--content">
                    <p>
                        {{post.content1}}
                    </p>
                    <p>
                        {{post.content2}}
                    </p>
                </div>
                <div class="post__view--author">
                    <small>Người đăng: {{post.author}}</small>
                </div>
            </div>
            <div class="col-md-5 col-lg-5"></div>
        </div>
    </div>
</div>